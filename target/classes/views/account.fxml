                     <children>
                        <Label fx:id="fullNameLabel" text="Full name" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="usernameLabel" text="Username" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="passwordLabel" text="Password" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label fx:id="balanceLabel" text="Balance" />

      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="260.0" prefWidth="124.0" spacing="50.0">
               <children>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Account Info">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/account/edit.png" />
                           </image>
                        </ImageView>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Keep your personal information up-to-date" textAlignment="CENTER" wrappingWidth="200.0" />
                        <Hyperlink onAction="#handleUpdateInfo" text="Update Info &gt;" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Password">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/account/key.png" />
                           </image>
                        </ImageView>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Make your password stronger or change it if someone else knows it" textAlignment="CENTER" wrappingWidth="200.0" />
                        <Hyperlink onAction="#handleChangePassword" text="Change password &gt;" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Add cash to wallet">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/account/wallet.png" />
                           </image>
                        </ImageView>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Feeling broke? Add some cash to your wallet" textAlignment="CENTER" wrappingWidth="200.0" />
                        <Hyperlink onAction="#handleAddCash" text="Add cash &gt;" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <BorderPane>
               <center>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="Connected Bank">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <MFXScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true">
                           <content>
                              <FlowPane fx:id="flowPane" />
                           </content>
                        </MFXScrollPane>
                     </children>
                  </VBox>
               </center>
               <top>
                  <Label text="You have ... in your wallet" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="20.0" />
                     </BorderPane.margin>
                  </Label>
               </top>
               <bottom>
                  <Label text="You have ... sth sth" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets top="20.0" />

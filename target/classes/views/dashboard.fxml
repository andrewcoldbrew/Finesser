<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="850.0" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myApp.controllers.views.DashboardController">
    <right>
        <VBox alignment="TOP_CENTER" maxWidth="250.0" prefHeight="850.0" prefWidth="210.0" spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="totalBalanceLabel" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="sideBox" text="Total Balance" />
                <VBox alignment="TOP_CENTER" spacing="30.0" styleClass="sideBox" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
               <children>
                  <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Most Recent Transactions" textAlignment="CENTER" wrappingWidth="200.0">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <MFXScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="transactionContainer" alignment="TOP_CENTER" spacing="20.0">
                           <padding>
                              <Insets bottom="5.0" />
                           </padding>
                        </VBox>
                     </content>
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </MFXScrollPane>
                  <Hyperlink fx:id="seeMoreLink" text="See more..." />
               </children>
                </VBox>
            </children>
        </VBox>
    </right>
    <center>
        <VBox spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="100.0">
                    <children>
                        <Label fx:id="welcomeLabel" alignment="CENTER" text="Welcome Mr/Ms" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="48.0" />
                            </font>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Label>
                        <ImageView fx:id="userProfileImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="sideBox" HBox.hgrow="ALWAYS">
                            <image>
                                <Image url="@../images/account/user.png" />
                            </image>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
                <HBox spacing="50.0">
                    <children>
                        <PieChart fx:id="categoryPieChart" prefHeight="300.0" prefWidth="500.0">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </PieChart>
                        <BarChart fx:id="budgetVsSpendingChart" animated="false" legendVisible="true" prefHeight="300.0" prefWidth="500.0">
                            <xAxis>
                                <CategoryAxis label="Category" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Amount" />
                            </yAxis>
                        </BarChart>
                    </children>
                </HBox>
                  <AreaChart fx:id="incomeVsOutcomeChart" prefHeight="300.0">
                      <xAxis>
                          <CategoryAxis label="Date" side="BOTTOM" fx:id="xAxis" />
                      </xAxis>
                      <yAxis>
                          <NumberAxis fx:id="yAxis" label="Amount" />
                      </yAxis>
                  </AreaChart>

            </children>
         <BorderPane.margin>
            <Insets right="20.0" />
         </BorderPane.margin>
        </VBox>
    </center>
   <padding>
      <Insets bottom="20.0" />
   </padding>

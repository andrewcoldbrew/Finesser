<AnchorPane stylesheets="@../css/newSignup.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myApp.controllers.views.NewSignupController">
   <children>
      <AnchorPane fx:id="leftSignup">
         <children>
            <VBox alignment="CENTER" layoutX="65.0" layoutY="32.0">

                              </MFXTextField>
                              <Label fx:id="emailValidation">
                                 <padding>
                                    <Insets top="5.0" />
                                 </padding>
                              </Label>
                           </children>
                        </VBox>
                        <MFXTextField fx:id="usernameField" floatingText="Username" floatingTextGap="10.0" prefWidth="200.0" style="-fx-border-color: #9FE2BF;">

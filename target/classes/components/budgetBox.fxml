<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXProgressBar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="budgetBox" prefWidth="250.0" stylesheets="@../css/budget.css" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER_LEFT" prefWidth="270.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-width: 3; -fx-border-color: #9FE2BF;">
         <children>
            <Label fx:id="categoryLabel" text="Category" />
            <Label fx:id="budgetLabel" text="Budget">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Label>
            <Label fx:id="spentLabel" text="Spent">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Label>
            <Label fx:id="endDateLabel" text="Ends at">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Label>
            <HBox alignment="CENTER_LEFT" prefHeight="20.0" spacing="20.0">
               <children>
                  <Label fx:id="percentageLabel" text="Label" />
                  <MFXProgressBar fx:id="progressBar" animationSpeed="0.0" maxWidth="180.0" progress="0.69" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</fx:root>

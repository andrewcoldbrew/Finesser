<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXProgressBar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="budgetBox" stylesheets="@../css/budget.css" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label fx:id="categoryLabel" text="Category" />
            <Label fx:id="budgetLabel" text="Budget" />
            <Label fx:id="spentLabel" text="Spent" />
            <Label fx:id="endDateLabel" text="Ends at" />
            <Label fx:id="daysUntilExpiryLabel" text="Days Until Expiry" />
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label fx:id="percentageLabel" text="Label" />
                  <MFXProgressBar fx:id="progressBar" animationSpeed="0.0" progress="0.69" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</fx:root>

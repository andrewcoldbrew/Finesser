<AnchorPane prefHeight="597.0" prefWidth="856.0" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myApp.controllers.views.SignupController">
   <children>
      <AnchorPane prefHeight="597.0" prefWidth="470.0" styleClass="leftSideLogin">
         <children>
            <ImageView fitHeight="338.0" fitWidth="323.0" layoutX="74.0" layoutY="137.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Logo.png" />
               </image>
            </ImageView>
         </children></AnchorPane>
      <AnchorPane layoutX="468.0" prefHeight="597.0" prefWidth="484.0">
         <children>
            <TextField fx:id="usernameField" layoutX="51.0" layoutY="222.0" prefHeight="34.0" prefWidth="395.0" promptText="Username" />
            <Button fx:id="signupButton" layoutX="158.0" layoutY="438.0" mnemonicParsing="false" onAction="#signup" prefHeight="55.0" prefWidth="182.0" style="-fx-background-color: #4fa298;" text="Sign Up" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <PasswordField fx:id="passwordField" layoutX="51.0" layoutY="282.0" prefHeight="34.0" prefWidth="395.0" promptText="Password">

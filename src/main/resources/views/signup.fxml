            </PasswordField>
            <PasswordField fx:id="rePasswordField" layoutX="52.0" layoutY="340.0" prefHeight="34.0" prefWidth="395.0" promptText="Re-Enter Password" />
            <Label layoutX="61.0" layoutY="105.0" text="Create your account" textAlignment="CENTER">
